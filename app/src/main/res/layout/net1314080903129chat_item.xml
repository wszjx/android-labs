<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/receiver_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:src="@drawable/a" />

        <TextView
            android:id="@+id/white_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/net1314080903129white_left9"
            android:gravity="center"
            android:maxEms="14"
            android:text="《别说你懂孩子的心》"
            android:textColor="@color/colorText"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/send_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/green_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/net1314080903129green_right9"
            android:gravity="center"
            android:maxEms="14"
            android:text="为了孩子的健康成长，具体到“打电话”这件事，父母又该如何引导，从而给孩子的“模仿”多一份帮助呢？"
            android:textColor="@color/colorText"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/right_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:src="@drawable/net1314080903129me" />
    </LinearLayout>

</LinearLayout>